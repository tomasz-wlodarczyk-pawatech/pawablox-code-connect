{
  "name": "pawablox",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "test": "vitest run --passWithNoTests",
    "lint": "eslint . && bun run stylelint:lint",
    "fix": "eslint . --fix && bun run stylelint:fix",
    "typecheck": "tsc -p packages/components/tsconfig.json --noEmit && tsc -p packages/icons/tsconfig.json --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "stylelint:lint": "stylelint \"**/*.scss\"",
    "stylelint:fix": "stylelint \"**/*.scss\" --fix",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "figma:connect": "npx @figma/code-connect connect",
    "figma:publish": "npx @figma/code-connect connect publish",
    "script:tokens": "bun scripts/tokens/app.mjs",
    "script:icons": "bun scripts/icons/app.mjs"
  },
  "devDependencies": {
    "@eslint/js": "9.18.0",
    "stylelint": "17.0.0",
    "stylelint-config-standard-scss": "17.0.0",
    "stylelint-prettier": "5.0.3",
    "@storybook/addon-a11y": "8.5.0",
    "@storybook/addon-essentials": "8.5.0",
    "@storybook/addon-interactions": "8.5.0",
    "@storybook/react": "8.5.0",
    "@storybook/react-vite": "8.5.0",
    "@types/node": "25.0.8",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@vitejs/plugin-react": "4.3.0",
    "eslint": "9.18.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "eslint-plugin-unused-imports": "4.0.0",
    "prettier": "3.3.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "sass": "1.77.0",
    "storybook": "8.5.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.18.0",
    "vite": "6.0.0",
    "vitest": "2.0.0"
  }
}
